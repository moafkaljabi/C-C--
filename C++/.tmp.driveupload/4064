// encapsulation

#include <iostream>
using namespace std;

class Employee
{

    // private
private:
    int salary;

    // public
public:
    void setSalary(int s)
    {
        salary = s;
    }
    int getSalary()
    {
        return salary;
    }
};

int main()
{
    Employee empObj1;
    empObj1.setSalary(5000);

    cout << empObj1.getSalary() << "\n\n";

    return 0;
}
